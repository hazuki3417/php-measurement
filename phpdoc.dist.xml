<?xml version="1.0" encoding="UTF-8" ?>
<phpdocumentor>
    <parser>
        <default-package-name>Default</default-package-name>
        <encoding>utf-8</encoding>
        <target>./docs/phpdoc</target>
        <markers>
            <item>TODO</item>
            <item>FIXME</item>
        </markers>
        <extensions>
            <extension>php</extension>
            <!-- <extension>php3</extension> -->
            <!-- <extension>phtml</extension> -->
        </extensions>
        <visibility></visibility>
    </parser>
    <transformer>
        <target>./docs/phpdoc</target>
    </transformer>
    <transformations>
        <template name="clean"/>
    </transformations>
    <translator>
        <locale></locale>
    </translator>
    <files>
        <directory>./src</directory>
        <ignore>./example</ignore>
        <ignore>./tests</ignore>
        <ignore-hidden>true</ignore-hidden>
        <ignore-symlinks>true</ignore-symlinks>
    </files>
    <logging>
        <level>error</level>
    </logging>
</phpdocumentor>
